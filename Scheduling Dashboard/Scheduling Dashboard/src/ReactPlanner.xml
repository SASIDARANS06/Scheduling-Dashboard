<?xml version="1.0" encoding="utf-8"?>
<widget id="mendix.reactplanner.ReactPlanner"
    pluginWidget="true"
    needsEntityContext="true"
    offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ http://www.mendix.com/widget/1.0/widget.xsd">

    <name>ReactPlanner</name>
    <description>Scheduler/Planner widget for React apps</description>
    <icon></icon>
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="Events">
                <property key="eventData" type="datasource" isList="true" required="true">
                    <caption>Events source</caption>
                    <description>Datasource containing event objects</description>
                </property>

                <property key="eventIdAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event id</caption>
                    <description>Unique identifier for the event</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                    </attributeTypes>
                </property>

                <property key="eventStartAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event start</caption>
                    <description>Start date of the event</description>
                    <attributeTypes>
                        <attributeType name="DateTime"/>
                    </attributeTypes>
                </property>

                <property key="eventEndAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event end</caption>
                    <description>End date of the event</description>
                    <attributeTypes>
                        <attributeType name="DateTime"/>
                    </attributeTypes>
                </property>

                <property key="eventResourceAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Resource id</caption>
                    <description>Resource associated with this event</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                    </attributeTypes>
                </property>

                <property key="eventTitleAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event title</caption>
                    <description>Title of the event</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>

                <property key="eventColorAttr" type="attribute" dataSource="eventData">
                    <caption>Color</caption>
                    <description>Background color of the event</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>

                <property key="eventSelection" type="selection" dataSource="eventData">
                    <caption>Event selection</caption>
                    <description>Enable event selection</description>
                    <selectionTypes>
                        <selectionType name="Single"/>
                    </selectionTypes>
                </property>

                <property key="onEventSelection" type="action">
                    <caption>On event click</caption>
                    <description>Action triggered when event is clicked</description>
                </property>

                <property key="onEventMoved" type="action">
                    <caption>On event moved</caption>
                    <description>Action triggered when event is moved</description>
                </property>

                <property key="onEventResized" type="action">
                    <caption>On event resized</caption>
                    <description>Action triggered when event is resized</description>
                </property>

                <property key="popoverContent" type="widgets" dataSource="eventData">
                    <caption>Pop over template</caption>
                    <description>Custom widget content for the event popover</description>
                </property>
            </propertyGroup>

            <propertyGroup caption="Resources">
                <property key="resourceData" type="datasource" isList="true" required="true">
                    <caption>Resources source</caption>
                    <description>Datasource for the resource list</description>
                </property>

                <property key="resourceIdAttr" type="attribute" dataSource="resourceData" required="true">
                    <caption>Resource id</caption>
                    <description>Unique identifier for the resource</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                    </attributeTypes>
                </property>

                <property key="resourceNameAttr" type="attribute" dataSource="resourceData" required="true">
                    <caption>Resource name</caption>
                    <description>Name or label of the resource</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>
            </propertyGroup>
        </propertyGroup>

        <propertyGroup caption="New Event">
            <property key="newEventResourceId" type="attribute" required="true">
                <caption>Resource id</caption>
                <description>Resource ID for the new event</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>

            <property key="newEventStart" type="attribute" required="true">
                <caption>Event Start</caption>
                <description>Start time for new event</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>

            <property key="newEventEnd" type="attribute" required="true">
                <caption>Event End</caption>
                <description>End time for new event</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>

            <property key="moveable" type="attribute" required="true">
                <caption>Moveable</caption>
                <description>Flag to determine if event is moveable</description>
                <attributeTypes>
                    <attributeType name="Boolean"/>
                </attributeTypes>
            </property>

            <property key="newEventAction" type="action">
                <caption>New event</caption>
                <description>Action triggered on new event creation</description>
            </property>
        </propertyGroup>

        <propertyGroup caption="Event Helpers">
            <property key="dragEventId" type="attribute">
                <caption>Drag Event ID</caption>
                <description>Helper ID for dragged event</description>
                <attributeTypes>
                    <attributeType name="Long"/>
                </attributeTypes>
            </property>

            <property key="dragStartDate" type="attribute">
                <caption>Drag Start</caption>
                <description>Start time of dragged event</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>

            <property key="dragEndDate" type="attribute">
                <caption>Drag End</caption>
                <description>End time of dragged event</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>

            <property key="dragResourceId" type="attribute">
                <caption>Drag Resource ID</caption>
                <description>Resource ID of dragged event</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>
        </propertyGroup>

        <propertyGroup caption="Configuration">
            <property key="showWeekends" type="boolean" defaultValue="false">
                <caption>Show weekends</caption>
                <description>Display weekends on the calendar</description>
            </property>

            <property key="viewStart" type="attribute">
                <caption>View Start</caption>
                <description>Start date of the current view</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>

            <property key="viewEnd" type="attribute">
                <caption>View End</caption>
                <description>End date of the current view</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>
        </propertyGroup>

        <propertyGroup caption="Views">
            <property key="showDay" type="boolean" defaultValue="true">
                <caption>Show Day</caption>
                <description>Enable day view</description>
            </property>

            <property key="showWeek" type="boolean" defaultValue="true">
                <caption>Show Week</caption>
                <description>Enable week view</description>
            </property>

            <property key="showMonth" type="boolean" defaultValue="true">
                <caption>Show Month</caption>
                <description>Enable month view</description>
            </property>

            <property key="showQuarter" type="boolean" defaultValue="true">
                <caption>Show Quarter</caption>
                <description>Enable quarter view</description>
            </property>

            <property key="showYear" type="boolean" defaultValue="true">
                <caption>Show Year</caption>
                <description>Enable year view</description>
            </property>

            <property key="defaultView" type="enumeration" defaultValue="Week">
                <caption>Default view</caption>
                <description>Initial view shown in the planner</description>
                <enumerationValues>
                    <enumerationValue key="Day">Day</enumerationValue>
                    <enumerationValue key="Week">Week</enumerationValue>
                    <enumerationValue key="Month">Month</enumerationValue>
                    <enumerationValue key="Quarter">Quarter</enumerationValue>
                    <enumerationValue key="Year">Year</enumerationValue>
                </enumerationValues>
            </property>
        </propertyGroup>
    </properties>
</widget>
